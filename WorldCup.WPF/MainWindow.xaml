<Window x:Class="WorldCup.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCup.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation 
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1" Duration="0:0:2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label x:Name="lblLanguage" Content="Language:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cmbLanguage" Width="100"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label x:Name="lblGender" Content="Gender:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cmbGender" Width="100"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Label x:Name="lblFavoriteTeam" Content="Favorite Team:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cmbFavoriteTeam" Width="200" SelectionChanged="cmbFavoriteTeam_SelectionChanged"/>
        </StackPanel>

        <GroupBox x:Name="grpFavoriteTeams" Header="Favorite Teams" Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
            <StackPanel>
                <ListBox x:Name="lstFavouriteTeams" Height="120" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,5">
                    <Button x:Name="btnAddFavoriteTeam" Content="Add Favorite Team" Width="140" Margin="0,0,10,0"/>
                    <Button x:Name="btnRemoveFavoriteTeam" Content="Remove" Width="100"/>
                </StackPanel>

                <Button x:Name="btnTeamInfo" Content="Team Info" Width="250" HorizontalAlignment="Left"/>
            </StackPanel>
        </GroupBox>


        <GroupBox x:Name="grpFavoritePlayers" Header="Favorite Players" Grid.Row="1" Grid.Column="1" Margin="10,0">
            <StackPanel>
                <ListBox x:Name="lstFavoritePlayers" Height="120" Margin="0,0,0,10"/>
                <Button x:Name="btnRemoveFavoritePlayer" Content="Remove Favorite Player" Width="160"/>
            </StackPanel>
        </GroupBox>


        <GroupBox x:Name="grpMatches" Header="Matches" Grid.Row="1" Grid.Column="2" Margin="10,0,0,0">
            <ListBox x:Name="lstMatches"/>
        </GroupBox>

        <GroupBox x:Name="grpPlayers" Header="Players" Grid.Row="2" Grid.Column="0" Margin="0,10,10,0">
            <ListBox x:Name="lstPlayers" Height="100"/>
        </GroupBox>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
            <Button x:Name="btnLoadMatches" Content="Load Matches" Width="120" Margin="0,0,10,0"/>
            <Button x:Name="btnLoadPlayers" Content="Load Players" Width="120"/>
        </StackPanel>


        <Button x:Name="btnAddToFavorites" Content="Add to Favorites" Grid.Row="2" Grid.Column="2" Width="150" Margin="0,10,0,0" HorizontalAlignment="Right"/>

        <GroupBox x:Name="grpPlayerLayout" Header="Player Layout" Grid.Row="3" Grid.ColumnSpan="3" Margin="0,10,0,0">
            <Canvas x:Name="canvasPlayers" Background="LightGreen" Height="500">
            </Canvas>
        </GroupBox>
    </Grid>
</Window>
