<UserControl x:Class="WorldCup.WPF.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldCup.WPF"
             mc:Ignorable="d" 
             Width="120" Height="55">
    <StackPanel Background="Transparent" Orientation="Vertical" >
        <Border Background="White" Width="40" Height="40" CornerRadius="40" BorderBrush="Black" BorderThickness="1">
            <TextBlock x:Name="txtPlayerShirt"
               Text="Shirt"
               Foreground="Red"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="10"/>
        </Border>
        <Grid Background="Transparent" HorizontalAlignment="Center">
            <TextBlock x:Name="txtPlayerName"
               Text="Name"
               HorizontalAlignment="Center"
               TextAlignment ="Center"
               Foreground="Red"
               FontSize="10"
               Width="120" />
        </Grid>

    </StackPanel>
</UserControl>
